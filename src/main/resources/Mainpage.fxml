<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Background Image -->
        <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@../../images/background/bg.jpg" />
            </image>
        </ImageView>

        <!-- Welcome Label -->
        <Label layoutX="106.0" layoutY="51.0" prefHeight="57.0" prefWidth="588.0" text="Welcome to Cookbook ">
            <font>
                <Font name="Georgia Bold" size="50.0" />
            </font>
        </Label>

        <!-- Choose Recipe Button -->
        <Button layoutX="100.0" layoutY="150.0" onAction="#handleChooseRecipe">
            <graphic>
                <ImageView fitHeight="300.0" fitWidth="250.0">
                    <image>
                        <Image url="@../../images/UIDesign/left.PNG" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Add Recipe Button -->
        <Button layoutX="434.0" layoutY="150.0" onAction="#handleAddRecipe">
            <graphic>
                <ImageView fitHeight="300.0" fitWidth="250.0">
                    <image>
                        <Image url="@../../images/UIDesign/right.PNG" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
